---
import Introduction from "../components/Introduction.astro";
import Snowball from "../components/Snowball.astro";
import Layout from "../layouts/Layout.astro";
import Companies from "../components/Companies.astro";
import Slogan from "../components/Slogan.astro";
import SocialNetworks from "../components/SocialNetworks.astro";
import Projects from "../components/Projects.astro";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
).slice(0, 2);
---

<Layout>
  <Snowball variant="primary" size="lg" position="top-24 right-0" />
  <Snowball variant="tertiary" size="lg" position="top-40 left-10" />
  <Snowball variant="warning" size="lg" position="top-2/4 right-1/3" />

  <Introduction />

  <Companies />

  <Slogan />

  <SocialNetworks />

  <Projects />

  <section class="container xl lg md sm px-5 mt-5 md:mt-10">
    <h1 class="text-3xl md:text-5xl font-semibold tracking-wider">
      My Article
    </h1>

    <ul class="container xl lg md sm flex flex-wrap gap-2 md:gap-8 my-5 md:my-10 p-0">
      {
        posts.map((post) => (
          <li class="w-full md:w-[calc(50%-1rem)] duration-200 ease-in flex justify-center">
            <a href={`/blog/${post.slug}/`}>
              <img
                src={post.data.heroImage}
                alt=""
                class="w-full hover:shadow hover:shadow-gray-900 duration-200"
              />

              <h4 class="text-xl md:text-3xl mt-2 md:mt-4">
                {post.data.title}
              </h4>

              <p class="text-lg md:text-xl">
                <FormattedDate date={post.data.pubDate} />
              </p>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
