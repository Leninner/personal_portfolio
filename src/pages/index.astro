---
import Introduction from "../components/Introduction.astro";
import Snowball from "../components/Snowball.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Snowball variant="primary" size="lg" position="top-24 right-0" />
  <Snowball variant="tertiary" size="lg" position="top-40 left-10" />
  <Snowball variant="warning" size="lg" position="top-2/4 right-1/3" />

  <Introduction />

  <section
    class="w-full bg-gray-200 flex justify-center md:h-52 py-10 my-5 md:my-10"
  >
    <div class="container flex flex-col sm:flex-row justify-evenly items-center gap-10">
      <img
        src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a9/Amazon_logo.svg/256px-Amazon_logo.svg.png"
        alt=""
        class="rounded-xl grayscale hover:grayscale-0 duration-200 ease-in w-32 md:w-60"
      />

      <img
        src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a9/Amazon_logo.svg/256px-Amazon_logo.svg.png"
        alt=""
        class="rounded-xl grayscale hover:grayscale-0 duration-200 ease-in w-32 md:w-60"
      />
    </div>
  </section>

  <section
    class="container xl lg md sm flex flex-col md:flex-row items-center justify-between gap-5 md:gap-10 xl:gap-24 px-5"
  >
    <div class="w-full lg:w-1/3 h-[600px]">
      <img
        src="https://plus.unsplash.com/premium_photo-1675034393381-7e246fc40755?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTd8fHByb2ZpbGV8ZW58MHx8MHx8fDA%3D"
        alt=""
        class="w-full h-full object-cover rounded-xl shadow-xl"
      />
    </div>

    <div class="w-full md:w-2/3">
      <h2
        class="text-4xl lg:text-6xl tracking-wider font-bold w-full lg:w-2/3 leading-tight"
      >
        PASSIONATE TO CRAFT AND DESIGNING AN HUMAN PRODUCT
      </h2>
      <p class="text-slate-800">
        Sound's Interesting? <span class="text-accent">
          <a href="/blog">Lest's talk</a>
        </span>
      </p>
    </div>
  </section>
</Layout>
