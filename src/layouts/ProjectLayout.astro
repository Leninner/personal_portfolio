---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"projects">["data"];

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={title} />
    <style>
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }

      .last-updated-on {
        font-style: italic;
      }
    </style>
  </head>

  <body class="cursor-default flex flex-col items-center">
    <Header />

    <main class="container xl">
      <article>
        <div class="prose">
          <div class="title">
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>

    <Footer />
  </body>
</html>
